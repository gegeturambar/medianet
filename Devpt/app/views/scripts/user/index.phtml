            let id = jQuery(e.target).data('id');

            jQuery.ajax({
                url: '/deleteuserajax',
                data: {'id':id},
                type: 'POST',
                success: function(data){
                    console.log(data);
                    if(data.error){
                        $('#error_msg').text(data.error_msg);
                        $('#error_msg').show();
                    }else{
                        elemToRemove.remove();
                        $('#success_msg').text("Utilisateur supprim√©");
                        $("#success").show();
                    }
                }
            });
            e.preventDefault();
        });
    });	
	

</script>

